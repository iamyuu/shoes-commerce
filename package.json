    "eslint-config-blvd": "1.1.1",
    "eslint-config-prettier": "7.1.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "faker": "5.1.0",
    "husky": "4.3.6",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.6.3",
